<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <% if current_user %>
  <h3>Logged in as <%= current_user.email %> <%= link_to "Log out", logout_path %></h3>
  <% end %>
  <% flash.each do |type, message| %>
    <div class="center-content center-block container alert alert-<%= type %>"><%= message %>
  <% end  %>
  <%= yield %>
</div>

</body>
</html>
